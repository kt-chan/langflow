{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend debug",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "preLaunchTask": "Install Backend",
      "args": [
        "--factory",
        "langflow.main:create_app",
        "--port",
        "7860",
        "--reload",
        "--log-level",
        "info",
        "--loop",
        "asyncio",
        "--reload-include",
        "./src/backend/langflow/*"
      ],
      "jinja": true,
      "justMyCode": false,
      "env": {
        "LANGFLOW_LOG_LEVEL": "debug",
        "LANGFLOW_PROMETHEUS_PORT": "9090"
      },
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Frontend debug",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/frontend",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "vite",
        "--debug",
        "--host=0.0.0.0",
        "--port=3000"
      ],
      // "runtimeExecutable": "yarn",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "wait-for-server", // This task will run before launching Chrome
      "type": "node"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src/frontend",
      "sourceMapPathOverrides": {
        "file:///*": "${webRoot}/*"
        // ... other overrides as needed
      },
      "preLaunchTask": "wait-for-frontend" // This task will run before launching Chrome
    }
